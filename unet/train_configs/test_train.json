{
    "random_seed": 42,

    "continue_training": false,
    "device": "cuda",
    "start_lr": 0.001,
    "end_lr": 1e-6,
    "weight_decay": 0.005,
    "n_epoch": 10,
    "grad_accumulate_steps": 4,
    "train_dir": "region_localizer/unet/trains/test_train",
    "loss_metric": "dice",
    "dice_class_weights": [0.0, 1.0],
    "optimizer": "Adam",

    "model_params": {
        "n_stages": 5,
        "initial_channels": 64,
        "channels_upsampling": 2,
        "image_channels": 3,
        "use_pad": true
    },

    "train_dataset_params": {
        "dset_pth": "../data/qgis/bing_train/train",
        "one_hot_encoding": true,
        "binary_segmentation": false,
        "cls_ids_to_train": [0, 1]
    },
    "val_dataset_params": {
        "dset_pth": "../data/qgis/bing_train/val",
        "one_hot_encoding": true,
        "binary_segmentation": false,
        "cls_ids_to_train": [0, 1]
    },
    "train_transforms": {
        "crop_size": [448, 448]
    },
    "val_transforms": {
        "crop_size": [448, 448]
    },

    "batch_size": 16,
    "num_workers": 8,
    "shuffle_train": true,
    "shuffle_val": false,
    "class_to_color": {
        "Background": [255, 255, 255],
        "Road": [255, 0, 0],
        "Trees": [0, 255, 0],
        "Water": [0, 0, 255]
    },
    "class_to_id": {
        "Background": 0,
        "Road": 1,
        "Trees": 2,
        "Water": 3
    },

    "callback_params": {
        "steps_per_call": 20,
        "save_images": {
            "only_first_image": true,
            "resize_shape": null,
            "save_stacked": true
        },
        "show_predict": {
            "only_first_image": true,
            "resize_shape": null,
            "wait_time": 1
        }
    }
}
