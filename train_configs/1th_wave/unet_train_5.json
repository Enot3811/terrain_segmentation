{
    "random_seed": 42,

    "continue_training": false,
    "device": "cuda",
    "start_lr": 0.001,
    "end_lr": 1e-6,
    "weight_decay": 0.005,
    "n_epoch": 10,
    "grad_accumulate_steps": 4,
    "train_dir": "region_localizer/unet/trains/unet_train_5",
    "loss_metric": "combined",
    "ce_class_weights": [0.07574, 0.49794, 0.08663, 0.33968],
    "optimizer": "Adam",

    "model_params": {
        "output_channels": 4,
        "n_stages": 5,
        "initial_channels": 64,
        "channels_upsampling": 2,
        "image_channels": 3,
        "use_pad": true
    },

    "train_dataset_params": {
        "dset_pth": "../data/qgis/bing_train/train",
        "one_hot_encoding": true
    },
    "val_dataset_params": {
        "dset_pth": "../data/qgis/bing_train/val",
        "one_hot_encoding": true
    },
    "train_transforms": {
        "crop_size": [448, 448]
    },
    "val_transforms": {
        "crop_size": [448, 448]
    },

    "batch_size": 16,
    "num_workers": 8,
    "shuffle_train": true,
    "shuffle_val": false,
    "cls_to_color": {
        "0": [255, 255, 255],
        "1": [255, 0, 0],
        "2": [0, 255, 0],
        "3": [0, 0, 255]
    },

    "image_saving_params": {
        "show_predict": false,
        "wait_time": 1,
        "save_images": true,
        "steps_per_save": 16
    }
}
